<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.RegistrazioneFragment">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="422dp"
            android:layout_height="178dp"
            android:scaleType="centerCrop"
            android:src="@drawable/healthcare_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="321dp"
                android:layout_height="323dp"
                app:layout_constraintBottom_toTopOf="@+id/btConfermaRegistrazione"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btAccesso">

                <LinearLayout
                    android:id="@+id/llRegistrazione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/nome"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etCognome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/cognome"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etCodiceFiscaleReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/codice_fiscale"
                        android:importantForAutofill="no"
                        android:inputType="textCapWords"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <TextView
                        android:id="@+id/etDataNascita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/dataNascita"
                        android:importantForAutofill="no"
                        android:inputType="date|textAutoComplete"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etCittaNascita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/cittaNascita"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg">

                        <TextView
                            android:id="@+id/tvGenere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:text="@string/genere"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            tools:ignore="TextContrastCheck" />

                        <RadioButton
                            android:id="@+id/rbFemmina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:text="@string/femmina"
                            app:paddingStart="20dp"
                            tools:ignore="TextContrastCheck" />

                        <RadioButton
                            android:id="@+id/rbMaschio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:text="@string/maschio"
                            app:paddingStart="20dp"
                            tools:ignore="TextContrastCheck" />
                    </TableRow>

                    <EditText
                        android:id="@+id/etTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/telefono"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etIndirizzo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/indirizzo"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etCap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/cap"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/email"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />

                    <EditText
                        android:id="@+id/etPasswordConferma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:hint="@string/conferma_password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias=".5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias=".3"
                        app:layout_constraintWidth_percent=".8" />
                </LinearLayout>
            </ScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btConfermaRegistrazione"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/buttons"
                android:text="@string/registrati"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2"
                app:layout_constraintVertical_bias=".7"
                app:layout_constraintWidth_percent=".8"
                tools:ignore="TextContrastCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAccesso"
                android:layout_width="102dp"
                android:layout_height="48dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="4dp"
                android:background="@color/TRANSPARENT"
                android:text="@string/accedi"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toStartOf="@+id/tvRegistratiCurrent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRegistratiCurrent"
                android:layout_width="102dp"
                android:layout_height="33dp"
                android:layout_marginStart="103dp"
                android:gravity="center"
                android:text="@string/registrati"
                android:textAllCaps="true"
                android:textColor="@color/background"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btAccesso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btAccesso"
                app:layout_constraintTop_toTopOf="@+id/btAccesso"
                tools:ignore="TextContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>